  max-height: 100%;
  width: 100%;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nav .nav_item {
  width: 25%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.nav .nav_item view {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #b50e03;
  margin: 10px auto;
  line-height: 120rpx;
  color: #fff;
  font-size: 50rpx;
}
.nav .nav_item .iconfont {
  font-size: 45rpx;
}
.nav .nav_item text {
  font-size: 30rpx;
}
